#define VERSION "8.40"
d1075 19
a1093 21
  int i, sum[] = { 0, 0 };
  uchar tail[952];

  fseek (ifp, -sizeof tail, SEEK_END);
  fread (tail, 1, sizeof tail, ifp);
  for (i=0; i < sizeof tail; i++)
    sum[(i>>2) & 1] += tail[i];
  if (sum[0] > 4*sum[1]) return;
  if (sum[1] > 4*sum[0]) {
    strcpy (make, "OLYMPUS");
    strcpy (model, "C740UZ");
    return;
  }
  sum[0] = sum[1] = 0;
  for (i=0; i < sizeof tail; i++)
    sum[i & 1] += tail[i];
  if (sum[1] > 4*sum[0] || sum[0]+sum[1] > 216000) {
    strcpy (make, "PENTAX");
    strcpy (model,"Optio 33WR");
  } else
    strcpy (model, "E3200");
