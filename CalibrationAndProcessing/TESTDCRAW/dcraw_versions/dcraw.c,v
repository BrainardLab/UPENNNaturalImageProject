a1305 19
void kodak_dcr_curve (ushort *curve)
{
  int i, j;

  for (i=0; i < 0x1000; i++)
    curve[i] = i;
  if (strncmp(model,"DCS Pro",7)) return;
  fseek (ifp, 0x4000, SEEK_SET);
  for (i=j=0; j < 100; i++) {
    if (i > 0x10000) return;
    if (fget2(ifp) == j) j++;
    else j=0;
  }
  fseek (ifp, 7992, SEEK_CUR);
  for (i=0; i < 0x400; i++)
    curve[i] = fget2(ifp);
  rgb_max = curve[i-1] << 2;
}

